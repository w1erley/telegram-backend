# main.yaml â€” variable definitions for your Telegram project

domain: "telegram.local"
url: "http://localhost:8000"

# JWT
jwt_secret: "supersecretjwtkey"

# Database
db_connection: "pgsql"
db_host: "pgsql"
db_port: 5432
db_name: "telegram"
db_user: "telegram_user"
db_password: "telegram_pass"

# Laravel ports
laravel_app_port: 8000
laravel_vite_port: 5173

# Redis
redis_client: "phpredis"
redis_host: "redis"
redis_password: null
redis_port: 6379

# Reverb (Laravel WebSocket server)
reverb_port: 6001
reverb_host: "localhost"
reverb_scheme: "http"
reverb_app_id: "app-id"
reverb_app_key: "app-key"
reverb_app_secret: "app-secret"

# MinIO / Storage
minio_endpoint: "http://minio:9000"
minio_key: "minioadmin"
minio_secret: "minioadmin"

# Tusd file upload service
tusd_url: "http://tusd:1080"

# Broadcast
laravel_broadcast_driver: "reverb"

# Frontend
front_end_url: "http://localhost:3000"
